{{ form_start(form) }}
    {{ form_widget(form) }}
    
    <div class="form-group">
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.fullName, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
    </div>
    <a class="btn btn-sm btn-default" href="{{ path('user_index') }}"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to list</a>
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}