{% extends 'layout/default.html.twig' %}

{% block pageTitle %}Students{% endblock %}

{% block title  %}Students{% endblock %}

{% block breadcrumb %}Students{% endblock %}

{% block content %}
    <p> 
		<a class="btn btn-sm btn-primary" href="{{ path('student_new') }}">Create new</a>
	</p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Gender</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.phone }}</td>
                <td>{{ student.email }}</td>
                <td>{{ student.address }}</td>
                <td>{{ student.gender }}</td>
                <td>{{ student.birthday ? student.birthday|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-sm btn-secondary" href="{{ path('student_show', {'id': student.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i> Show</a>
					<a class="btn btn-sm btn-warning text-light" href="{{ path('student_edit', {'id': student.id}) }}"><i class="fa fa-pencil-square" aria-hidden="true"></i> Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
