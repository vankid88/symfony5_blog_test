{{ form_start(form) }}
    <div class="col-6">
        <div class="form-group">
            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.birthday, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-sm btn-default" href="{{ path('teacher_index') }}">Back to list</a>

        <button class="btn btn-sm btn-primary">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}
