{% extends 'layout/default.html.twig' %}

{% block pageTitle %}Product index{% endblock %}

{% block title  %}Products{% endblock %}

{% block breadcrumb %}Products{% endblock %}

{% block content %}
	<h1>Products</h1>

	<p> 
		<a class="btn btn-sm btn-primary" href="{{ path('product_new') }}">Create new</a>
	</p>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for product in products %}
			<tr>
				<td>{{ product.id }}</td>
				<td>{{ product.name }}</td>
				<td>{{ product.price }}</td>
				<td>{{ product.description }}</td>
				<td>
					<a class="btn btn-sm btn-primary" href="{{ path('product_show', {'id': product.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i> Show</a>
					<a class="btn btn-sm btn-info" href="{{ path('product_edit', {'id': product.id}) }}"><i class="fa fa-pencil-square" aria-hidden="true"></i> Edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	
{% endblock %}