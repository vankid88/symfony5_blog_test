{% extends 'layout/default.html.twig' %}

{% block pageTitle %}Show Category {% endblock %}

{% block title  %}Show{% endblock %}

{% block breadcrumb %}Category{% endblock %}

{% block content %}
	<h1>Show Category</h1>
    <div class="col-6">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ category.description }}</td>
                </tr>
            </tbody>
        </table>

        <p></p>
        <a class="btn btn-sm btn-default" href="{{ path('category_index') }}">Back to list</a>

        <a class="btn btn-sm btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>
    </div>
{% endblock %}