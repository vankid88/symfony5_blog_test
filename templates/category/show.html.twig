{% extends 'layout/default.html.twig' %}

{% block pageTitle %}Category detail {% endblock %}

{% block title  %}Category detail{% endblock %}

{% block breadcrumb %}Category detail{% endblock %}

{% block content %}
	<div class="col-6">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<th width="30%">Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ category.name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ category.description }}</td>
				</tr>
			</tbody>
		</table>
		<p></p>
		<a class="btn btn-sm btn-default" href="{{ path('category_index') }}"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to list</a>
		<a class="btn btn-sm btn-warning text-light" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fa fa-pencil-square" aria-hidden="true"></i> Edit</a>
	</div>
{% endblock %}